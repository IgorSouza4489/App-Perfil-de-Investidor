<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oitavapergunta">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/pergunta8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#2437B8"
        android:text="8- Qual sua faixa de renda mensal média?"
        android:textColor="#2437B8"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121" />

    <RadioGroup
        android:id="@+id/R8A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pergunta8">


        <RadioButton
            android:id="@+id/Q8A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Até R$ 1.000" />

        <RadioButton
            android:id="@+id/Q8B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De R$ 1.001 até R$ 5.000" />

        <RadioButton
            android:id="@+id/Q8C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="De R$ 5.001 até R$ 10.000" />

        <RadioButton
            android:id="@+id/Q8D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acima de R$ 10.000" />

    </RadioGroup>

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#2437B8"
        android:text="Próximo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>